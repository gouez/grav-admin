<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Laser\Core\Checkout\Cart\CreditCartProcessor">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\AbsolutePriceCalculator"/>

            <tag name="laser.cart.processor"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\CustomCartProcessor">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>

            <tag name="laser.cart.processor" priority="4000"/>
            <tag name="laser.cart.collector"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\CartValueResolver">
            <argument type="service" id="Laser\Core\Checkout\Cart\SalesChannel\CartService"/>

            <tag name="controller.argument_value_resolver" priority="1001"/>
        </service>

        <!-- Price calculation -->
        <service id="Laser\Core\Checkout\Cart\Price\AmountCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\CashRounding"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\TaxCalculator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Cleanup\CleanupCartTask">
            <tag name="laser.scheduled.task"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Cleanup\CleanupCartTaskHandler">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument>%laser.cart.expire_days%</argument>
            <tag name="messenger.message_handler"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Price\CashRounding"/>

        <service id="Laser\Core\Checkout\Cart\CartPersister">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartSerializationCleaner"/>
            <argument>%laser.cart.compress%</argument>
        </service>

        <service id="Laser\Core\Checkout\Cart\CartSerializationCleaner">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\SalesChannel\CartService" public="true" lazy="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\SalesChannel\CartLoadRoute"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\SalesChannel\CartDeleteRoute"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\SalesChannel\CartItemAddRoute"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\SalesChannel\CartItemUpdateRoute"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\SalesChannel\CartItemRemoveRoute"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\SalesChannel\CartOrderRoute"/>

            <tag name="kernel.reset" method="reset"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\CartCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\CartRuleLoader"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\SalesChannel\CartItemUpdateRoute" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\LineItemFactoryRegistry"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\SalesChannel\CartLoadRoute" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\TaxProvider\TaxProviderProcessor"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\SalesChannel\CartDeleteRoute" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\SalesChannel\CartItemRemoveRoute" public="true">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\SalesChannel\CartItemAddRoute" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\CartCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\LineItemFactoryRegistry"/>
            <argument type="service" id="laser.rate_limiter"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\SalesChannel\CartOrderRoute" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\CartCalculator"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Order\OrderPersister"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Payment\PreparedPaymentService"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\TaxProvider\TaxProviderProcessor"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\GrossPriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\NetPriceCalculator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Price\GrossPriceCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\TaxCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\CashRounding"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Price\NetPriceCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\TaxCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\CashRounding"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Price\PercentagePriceCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\CashRounding"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Price\AbsolutePriceCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Price\CurrencyPriceCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/>
        </service>

        <!-- Tax calculation -->
        <service id="Laser\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/>

        <service id="Laser\Core\Checkout\Cart\Tax\TaxDetector"/>

        <service id="Laser\Core\Checkout\Cart\Tax\TaxCalculator" />

        <!-- Tax providers -->
        <!-- ==================================================================================================================== -->

        <service id="Laser\Core\Checkout\Cart\TaxProvider\TaxProviderProcessor">
            <argument type="service" id="tax_provider.repository"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\TaxProvider\TaxAdjustment"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\TaxProvider\TaxProviderRegistry"/>
            <argument type="service" id="Laser\Core\Framework\App\TaxProvider\Payload\TaxProviderPayloadService"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\TaxProvider\TaxProviderRegistry" public="true">
            <argument type="tagged_iterator" tag="laser.tax.provider"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\TaxProvider\TaxAdjustmentCalculator"/>

        <service id="laser.tax.adjustment_calculator" class="Laser\Core\Checkout\Cart\Price\AmountCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\CashRounding"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\TaxProvider\TaxAdjustmentCalculator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\TaxProvider\TaxAdjustment">
            <argument type="service" id="laser.tax.adjustment_calculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\CashRounding"/>
        </service>

        <service id="Laser\Core\Framework\App\TaxProvider\Payload\TaxProviderPayloadService">
            <argument type="service" id="Laser\Core\Framework\App\AppPayloadServiceHelper"/>
            <argument type="service" id="laser.app_system.guzzle"/>
            <argument type="string">%env(APP_URL)%</argument>
        </service>

        <!-- ==================================================================================================================== -->

        <service id="Laser\Core\Checkout\Cart\Delivery\DeliveryBuilder"/>

        <service id="Laser\Core\Checkout\Cart\Delivery\DeliveryCalculator">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\PercentageTaxRuleBuilder"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\PriceActionController" public="true">
            <argument type="service" id="tax.repository"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\NetPriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\GrossPriceCalculator"/>
            <argument type="service" id="currency.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Laser\Core\Checkout\Cart\Calculator" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\PercentagePriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\AbsolutePriceCalculator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Delivery\DeliveryProcessor">
            <argument type="service" id="Laser\Core\Checkout\Cart\Delivery\DeliveryBuilder"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Delivery\DeliveryCalculator"/>
            <argument type="service" id="shipping_method.repository"/>

            <tag name="laser.cart.processor" priority="-5000"/>
            <tag name="laser.cart.collector" priority="-5000"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Delivery\DeliveryValidator">
            <tag name="laser.cart.validator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\LineItemValidator">
            <tag name="laser.cart.validator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Address\AddressValidator">
            <argument type="service" id="country.repository"/>
            <tag name="laser.cart.validator"/>
            <tag name="kernel.reset" method="reset"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Validator">
            <argument type="tagged" tag="laser.cart.validator"/>
        </service>

        <service id="Laser\Core\Content\Product\Cart\ProductLineItemValidator">
            <tag name="laser.cart.validator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Processor">
            <argument type="service" id="Laser\Core\Checkout\Cart\Validator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\AmountCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Transaction\TransactionProcessor"/>
            <argument type="tagged" tag="laser.cart.processor"/>
            <argument type="tagged" tag="laser.cart.collector"/>
            <argument type="service" id="Laser\Core\Framework\Script\Execution\ScriptExecutor"/>
        </service>

        <service id="Laser\Core\Content\Product\Cart\ProductCartProcessor">
            <argument type="service" id="Laser\Core\Content\Product\Cart\ProductGateway"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Laser\Core\Content\Product\Cart\ProductFeatureBuilder"/>
            <argument type="service" id="Laser\Core\Content\Product\SalesChannel\Price\ProductPriceCalculator"/>
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Cache\EntityCacheKeyGenerator"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>

            <tag name="laser.cart.processor" priority="5000"/>
            <tag name="laser.cart.collector" priority="5000"/>
        </service>

        <service id="Laser\Core\Content\Product\Cart\ProductFeatureBuilder">
            <argument type="service" id="custom_field.repository"/>
            <argument type="service" id="Laser\Core\System\Locale\LanguageLocaleCodeProvider"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Transaction\TransactionProcessor"/>

        <service id="Laser\Core\Checkout\Cart\Order\Api\OrderConverterController" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\Order\OrderConverter"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="order.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Laser\Core\Checkout\Cart\Order\Api\OrderRecalculationController" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\Order\RecalculationService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Laser\Core\Checkout\Cart\Order\RecalculationService">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Order\OrderConverter"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\SalesChannel\CartService"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="order_address.repository"/>
            <argument type="service" id="customer_address.repository"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Processor"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartRuleLoader"/>
            <argument type="service" id="Laser\Core\Checkout\Promotion\Cart\PromotionItemBuilder"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\CartRuleLoader">
            <argument type="service" id="Laser\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Processor"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="cache.object"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\RuleLoader"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Tax\TaxDetector"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\TaxProvider\TaxProviderProcessor"/>

            <tag name="kernel.reset" method="reset"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\CachedRuleLoader" decorates="Laser\Core\Checkout\Cart\RuleLoader" decoration-priority="-1000">
            <argument type="service" id="Laser\Core\Checkout\Cart\CachedRuleLoader.inner"/>
            <argument type="service" id="cache.object"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\RuleLoader">
            <argument type="service" id="rule.repository"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\LineItemQuantitySplitter">
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\PriceDefinitionFactory"/>

        <service id="Laser\Core\Checkout\Cart\LineItemFactoryRegistry">
            <argument type="tagged" tag="laser.cart.line_item.factory"/>
            <argument type="service" id="Laser\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItemFactoryHandler\ProductLineItemFactory">
            <argument type="service" id="Laser\Core\Checkout\Cart\PriceDefinitionFactory"/>
            <tag name="laser.cart.line_item.factory"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItemFactoryHandler\PromotionLineItemFactory">
            <tag name="laser.cart.line_item.factory"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItemFactoryHandler\CreditLineItemFactory">
            <argument type="service" id="Laser\Core\Checkout\Cart\PriceDefinitionFactory"/>
            <argument type="service" id="media.repository"/>
            <tag name="laser.cart.line_item.factory"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItemFactoryHandler\CustomLineItemFactory">
            <argument type="service" id="Laser\Core\Checkout\Cart\PriceDefinitionFactory"/>
            <argument type="service" id="media.repository"/>
            <tag name="laser.cart.line_item.factory"/>
        </service>

        <!-- LINE ITEM GROUPS -->
        <!-- ==================================================================================================================== -->

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\RulesMatcher\AbstractAnyRuleLineItemMatcher"
                 class="Laser\Core\Checkout\Cart\LineItem\Group\RulesMatcher\AnyRuleLineItemMatcher"/>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\AbstractProductLineItemProvider"
                 class="Laser\Core\Checkout\Cart\LineItem\Group\ProductLineItemProvider"/>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\LineItemGroupBuilder">
            <argument type="service" id="Laser\Core\Checkout\Cart\LineItem\Group\LineItemGroupServiceRegistry"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\LineItem\Group\RulesMatcher\AnyRuleMatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\LineItem\LineItemQuantitySplitter"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\LineItem\Group\AbstractProductLineItemProvider"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\LineItemGroupServiceRegistry">
            <argument type="tagged" tag="lineitem.group.packager"/>
            <argument type="tagged" tag="lineitem.group.sorter"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\Packager\LineItemGroupCountPackager">
            <tag name="lineitem.group.packager"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\Packager\LineItemGroupUnitPriceGrossPackager">
            <tag name="lineitem.group.packager"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\Packager\LineItemGroupUnitPriceNetPackager">
            <tag name="lineitem.group.packager"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\Sorter\LineItemGroupPriceAscSorter">
            <tag name="lineitem.group.sorter"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\Sorter\LineItemGroupPriceDescSorter">
            <tag name="lineitem.group.sorter"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\LineItem\Group\RulesMatcher\AnyRuleMatcher">
            <argument type="service" id="Laser\Core\Checkout\Cart\LineItem\Group\RulesMatcher\AbstractAnyRuleLineItemMatcher"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Facade\CartFacadeHookFactory" public="true">
            <argument type="service" id="Laser\Core\Checkout\Cart\Facade\CartFacadeHelper"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Facade\CartFacadeHelper">
            <argument type="service" id="Laser\Core\Checkout\Cart\LineItemFactoryRegistry"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Processor"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>

            <tag name="kernel.reset" method="reset"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Processor\ContainerCartProcessor">
            <tag name="laser.cart.processor" priority="3800"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\PercentagePriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\CurrencyPriceCalculator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\Processor\DiscountCartProcessor">
            <tag name="laser.cart.processor" priority="3700"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\PercentagePriceCalculator"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\Price\CurrencyPriceCalculator"/>
        </service>

        <service id="Laser\Core\Checkout\Cart\RedisCartPersister">
            <argument type="service" id="laser.cart.redis"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartSerializationCleaner"/>
            <argument>%laser.cart.compress%</argument>
            <argument>%laser.cart.expire_days%</argument>
        </service>

        <service id="laser.cart.redis" class="Redis">
            <factory service="Laser\Core\Framework\Adapter\Cache\RedisConnectionFactory" method="create"/>
            <argument>%laser.cart.redis_url%</argument>
        </service>

        <service id="Laser\Core\Checkout\Cart\Command\CartMigrateCommand">
            <argument type="service" id="laser.cart.redis" on-invalid="null"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument>%laser.cart.compress%</argument>
            <argument>%laser.cart.expire_days%</argument>
            <argument type="service" id="Laser\Core\Framework\Adapter\Cache\RedisConnectionFactory"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>
