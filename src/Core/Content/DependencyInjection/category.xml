<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Laser\Core\Content\Category\CategoryDefinition">
            <tag name="laser.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\Category\Aggregate\CategoryTranslation\CategoryTranslationDefinition">
            <tag name="laser.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\Category\Aggregate\CategoryTag\CategoryTagDefinition">
            <tag name="laser.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\Category\SalesChannel\SalesChannelCategoryDefinition">
            <tag name="laser.sales_channel.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\Category\Service\NavigationLoader">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Content\Category\SalesChannel\NavigationRoute"/>
        </service>

        <service id="Laser\Core\Content\Category\SalesChannel\NavigationRoute" public="true">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="sales_channel.category.repository"/>
        </service>

        <service id="Laser\Core\Content\Category\SalesChannel\CachedNavigationRoute" decorates="Laser\Core\Content\Category\SalesChannel\NavigationRoute" decoration-priority="-1000" public="true">
            <argument type="service" id="Laser\Core\Content\Category\SalesChannel\CachedNavigationRoute.inner"/>
            <argument type="service" id="cache.object"/>
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Cache\EntityCacheKeyGenerator"/>
            <argument type="service" id="Laser\Core\Framework\Adapter\Cache\CacheTracer"/>
            <argument type="service" id="event_dispatcher"/>
            <argument>%laser.cache.invalidation.navigation_route%</argument>
        </service>

        <service id="Laser\Core\Content\Category\SalesChannel\TreeBuildingNavigationRoute" decorates="Laser\Core\Content\Category\SalesChannel\NavigationRoute" decoration-priority="-2000" public="true">
            <argument type="service" id="Laser\Core\Content\Category\SalesChannel\TreeBuildingNavigationRoute.inner"/>
        </service>

        <service id="Laser\Core\Content\Category\SalesChannel\CachedCategoryRoute" decorates="Laser\Core\Content\Category\SalesChannel\CategoryRoute" decoration-priority="-1000" public="true">
            <argument type="service" id="Laser\Core\Content\Category\SalesChannel\CachedCategoryRoute.inner"/>
            <argument type="service" id="cache.object"/>
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Cache\EntityCacheKeyGenerator"/>
            <argument type="service" id="Laser\Core\Framework\Adapter\Cache\CacheTracer"/>
            <argument type="service" id="event_dispatcher"/>
            <argument>%laser.cache.invalidation.category_route%</argument>
        </service>

        <service id="Laser\Core\Content\Category\SalesChannel\CategoryRoute" public="true">
            <argument type="service" id="sales_channel.category.repository"/>
            <argument type="service" id="Laser\Core\Content\Cms\SalesChannel\SalesChannelCmsPageLoader"/>
            <argument type="service" id="Laser\Core\Content\Category\SalesChannel\SalesChannelCategoryDefinition"/>
        </service>

        <service id="Laser\Core\Content\Category\SalesChannel\CategoryListRoute" public="true">
            <argument type="service" id="sales_channel.category.repository"/>
        </service>

        <service id="Laser\Core\Content\Category\DataAbstractionLayer\CategoryIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="category.repository"/>
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Indexing\ChildCountUpdater"/>
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Indexing\TreeUpdater"/>
            <argument type="service" id="Laser\Core\Content\Category\DataAbstractionLayer\CategoryBreadcrumbUpdater"/>
            <argument type="service" id="event_dispatcher"/>
            <tag name="laser.entity_indexer"/>
        </service>

        <service id="Laser\Core\Content\Category\DataAbstractionLayer\CategoryBreadcrumbUpdater">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="category.repository"/>
            <argument type="service" id="language.repository"/>
        </service>

        <service id="Laser\Core\Framework\DataAbstractionLayer\Indexing\TreeUpdater">
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\DefinitionInstanceRegistry"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Laser\Core\Content\Category\Service\CategoryBreadcrumbBuilder">
            <argument type="service" id="category.repository"/>
        </service>

        <service id="Laser\Core\Content\Category\Service\CategoryUrlGenerator">
            <argument type="service" id="Laser\Core\Content\Seo\SeoUrlPlaceholderHandlerInterface" />
        </service>

        <service id="Laser\Core\Content\Category\Validation\EntryPointValidator">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Laser\Core\Content\Category\Subscriber\CategorySubscriber">
            <argument type="service" id="Laser\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
