<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Laser\Core\Content\Rule\RuleDefinition">
            <tag name="laser.entity.definition"/>
        </service>
        <service id="Laser\Core\Content\Rule\Aggregate\RuleCondition\RuleConditionDefinition">
            <tag name="laser.entity.definition"/>
        </service>
        <service id="Laser\Core\Content\Rule\Aggregate\RuleTag\RuleTagDefinition">
            <tag name="laser.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\Rule\RuleValidator">
            <argument type="service" id="validator"/>
            <argument type="service" id="Laser\Core\Framework\Rule\Collector\RuleConditionRegistry"/>
            <argument type="service" id="rule_condition.repository" />
            <argument type="service" id="app_script_condition.repository" />

            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Laser\Core\Content\Rule\DataAbstractionLayer\RulePayloadSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="Laser\Core\Content\Rule\DataAbstractionLayer\RulePayloadUpdater"/>
            <argument type="service" id="Laser\Core\Framework\Script\Debugging\ScriptTraces"/>
            <argument>%kernel.cache_dir%</argument>
            <argument>%kernel.debug%</argument>
        </service>

        <service id="Laser\Core\Content\Rule\DataAbstractionLayer\RuleIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="rule.repository"/>
            <argument type="service" id="Laser\Core\Content\Rule\DataAbstractionLayer\RulePayloadUpdater"/>
            <argument type="service" id="Laser\Core\Content\Rule\DataAbstractionLayer\RuleAreaUpdater"/>
            <argument type="service" id="Laser\Core\Checkout\Cart\CartRuleLoader"/>
            <tag name="laser.entity_indexer"/>
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Laser\Core\Content\Rule\DataAbstractionLayer\RulePayloadUpdater">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Laser\Core\Framework\Rule\Collector\RuleConditionRegistry"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Laser\Core\Content\Rule\DataAbstractionLayer\RuleAreaUpdater">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Laser\Core\Content\Rule\RuleDefinition"/>
            <argument type="service" id="Laser\Core\Framework\Rule\Collector\RuleConditionRegistry"/>
            <argument type="service" id="Laser\Core\Framework\Adapter\Cache\CacheInvalidator"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
