<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Laser\Core\Content\Newsletter\Aggregate\NewsletterRecipient\NewsletterRecipientDefinition">
            <tag name="laser.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\Newsletter\SalesChannel\SalesChannelNewsletterRecipientDefinition">
            <tag name="laser.sales_channel.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\Newsletter\Aggregate\NewsletterRecipientTag\NewsletterRecipientTagDefinition">
            <tag name="laser.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\Newsletter\ScheduledTask\NewsletterRecipientTask">
            <tag name="laser.scheduled.task" />
        </service>

        <service id="Laser\Core\Content\Newsletter\ScheduledTask\NewsletterRecipientTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="newsletter_recipient.repository" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="Laser\Core\Content\Newsletter\NewsletterExceptionHandler">
            <tag name="laser.dal.exception_handler"/>
        </service>

        <service id="Laser\Core\Content\Newsletter\SalesChannel\NewsletterSubscribeRoute" public="true">
            <argument type="service" id="newsletter_recipient.repository" />
            <argument type="service" id="Laser\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="laser.rate_limiter" />
            <argument type="service" id="Symfony\Component\HttpFoundation\RequestStack" />
        </service>

        <service id="Laser\Core\Content\Newsletter\SalesChannel\NewsletterConfirmRoute" public="true">
            <argument type="service" id="newsletter_recipient.repository" />
            <argument type="service" id="Laser\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Laser\Core\Content\Newsletter\SalesChannel\NewsletterUnsubscribeRoute" public="true">
            <argument type="service" id="newsletter_recipient.repository" />
            <argument type="service" id="Laser\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="Laser\Core\Content\Newsletter\DataAbstractionLayer\NewsletterRecipientIndexer">
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="newsletter_recipient.repository"/>
            <argument type="service" id="Laser\Core\Content\Newsletter\DataAbstractionLayer\Indexing\CustomerNewsletterSalesChannelsUpdater"/>
            <argument type="service" id="event_dispatcher"/>
            <tag name="laser.entity_indexer"/>
        </service>

        <service id="Laser\Core\Content\Newsletter\DataAbstractionLayer\Indexing\CustomerNewsletterSalesChannelsUpdater">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Laser\Core\Content\Newsletter\Event\Subscriber\NewsletterRecipientDeletedSubscriber">
            <argument type="service" id="messenger.bus.laser"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
