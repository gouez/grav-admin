<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Laser\Core\Content\ProductStream\ProductStreamDefinition">
            <tag name="laser.entity.definition"/>
        </service>
        <service id="Laser\Core\Content\ProductStream\Aggregate\ProductStreamTranslation\ProductStreamTranslationDefinition">
            <tag name="laser.entity.definition"/>
        </service>
        <service id="Laser\Core\Content\ProductStream\Aggregate\ProductStreamFilter\ProductStreamFilterDefinition">
            <tag name="laser.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\ProductStream\Service\ProductStreamBuilder" public="true">
            <argument type="service" id="product_stream.repository"/>
            <argument type="service" id="Laser\Core\Content\Product\ProductDefinition"/>
        </service>

        <service id="Laser\Core\Content\ProductStream\DataAbstractionLayer\ProductStreamIndexer">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Laser\Core\Framework\DataAbstractionLayer\Dbal\Common\IteratorFactory"/>
            <argument type="service" id="product_stream.repository"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="Laser\Core\Content\Product\ProductDefinition"/>
            <argument type="service" id="event_dispatcher"/>

            <!-- needs to run before ProductStreamUpdater -->
            <tag name="laser.entity_indexer" priority="100"/>
        </service>

        <service id="Laser\Core\Content\ProductStream\ScheduledTask\UpdateProductStreamMappingTask">
            <tag name="laser.scheduled.task"/>
        </service>

        <service id="Laser\Core\Content\ProductStream\ScheduledTask\UpdateProductStreamMappingTaskHandler">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="product_stream.repository"/>
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>
