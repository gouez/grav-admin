<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="product_export.directory">export</parameter>
        <parameter key="product_export.read_buffer_size">100</parameter>
    </parameters>
    <services>
        <service id="Laser\Core\Content\ProductExport\ProductExportDefinition">
            <tag name="laser.entity.definition"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\Service\ProductExportRenderer">
            <argument type="service" id="Laser\Core\Framework\Adapter\Twig\StringTemplateRenderer"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Content\Seo\SeoUrlPlaceholderHandlerInterface"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\Service\ProductExporter" public="true">
            <argument type="service" id="product_export.repository"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportGenerator"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportFileHandler"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\Service\ProductExportFileHandler">
            <argument type="service" id="laser.filesystem.private"/>
            <argument type="string">%product_export.directory%</argument>
        </service>

        <service id="Laser\Core\Content\ProductExport\Service\ProductExportGenerator" public="true">
            <argument type="service" id="Laser\Core\Content\ProductStream\Service\ProductStreamBuilder"/>
            <argument type="service" id="sales_channel.product.repository"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportRenderer"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportValidator"/>
            <argument type="service" id="Laser\Core\System\SalesChannel\Context\SalesChannelContextService"/>
            <argument type="service" id="Laser\Core\Framework\Adapter\Translation\Translator"/>
            <argument type="service" id="Laser\Core\System\SalesChannel\Context\SalesChannelContextPersister"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="string">%product_export.read_buffer_size%</argument>
            <argument type="service" id="Laser\Core\Content\Seo\SeoUrlPlaceholderHandlerInterface"/>
            <argument type="service" id="twig"/>
            <argument type="service" id="Laser\Core\Content\Product\ProductDefinition"/>
            <argument type="service" id="Laser\Core\System\Locale\LanguageLocaleCodeProvider"/>
            <argument type="service" id="Laser\Core\Framework\Adapter\Twig\TwigVariableParserFactory"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\Command\ProductExportGenerateCommand">
            <argument type="service" id="Laser\Core\System\SalesChannel\Context\SalesChannelContextFactory"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExporter"/>
            <tag name="console.command"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\ScheduledTask\ProductExportGenerateTask">
            <tag name="laser.scheduled.task"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\ScheduledTask\ProductExportGenerateTaskHandler">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="Laser\Core\System\SalesChannel\Context\SalesChannelContextFactory"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="product_export.repository"/>
            <argument type="service" id="messenger.bus.laser"/>
            <tag name="messenger.message_handler"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\ScheduledTask\ProductExportPartialGenerationHandler">
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportGenerator"/>
            <argument type="service" id="Laser\Core\System\SalesChannel\Context\SalesChannelContextFactory"/>
            <argument type="service" id="product_export.repository"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportFileHandler"/>
            <argument type="service" id="messenger.bus.laser"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportRenderer"/>
            <argument type="service" id="Laser\Core\Framework\Adapter\Translation\Translator"/>
            <argument type="service" id="Laser\Core\System\SalesChannel\Context\SalesChannelContextService"/>
            <argument type="service" id="Laser\Core\System\SalesChannel\Context\SalesChannelContextPersister"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="string">%product_export.read_buffer_size%</argument>
            <argument type="service" id="Laser\Core\System\Locale\LanguageLocaleCodeProvider"/>
            <tag name="messenger.message_handler"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\Api\ProductExportController" public="true">
            <argument type="service" id="sales_channel_domain.repository"/>
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportGenerator"/>
            <argument type="service" id="event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Laser\Core\Content\ProductExport\Service\ProductExportValidator">
            <argument type="tagged" tag="laser.product_export.validator"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\Validator\XmlValidator">
            <tag name="laser.product_export.validator"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\DataAbstractionLayer\ProductExportExceptionHandler">
            <tag name="laser.dal.exception_handler"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\EventListener\ProductExportEventListener">
            <argument type="service" id="product_export.repository"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportFileHandler"/>
            <argument type="service" id="laser.filesystem.private"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Laser\Core\Content\ProductExport\SalesChannel\ExportController" public="true">
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExporter"/>
            <argument type="service" id="Laser\Core\Content\ProductExport\Service\ProductExportFileHandler"/>
            <argument type="service" id="laser.filesystem.private"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="product_export.repository"/>
            <argument type="service" id="Laser\Core\System\SalesChannel\Context\SalesChannelContextFactory"/>
        </service>
    </services>
</container>
